<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
>


<androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PersegeiFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText android:id="@+id/panjang" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Masukan Panjang"
              android:layout_marginHorizontal="50dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="50dp"



    />
    <EditText
            android:id="@+id/lebar"
            android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Masukan Lebar"
              android:layout_marginHorizontal="50dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="100dp"



    />
    <Button android:id="@+id/butt" android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/lebar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Hitung"

    />
    <TextView android:id="@+id/hasil" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Hasil: "
              android:gravity="center"
              android:textSize="50dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/lebar"
              android:layout_marginTop="50dp"
    />

    <TextView android:id="@+id/jawab2" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Alas:"
              android:textSize="20dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/lebar"
              android:layout_marginTop="120dp"
              android:layout_marginLeft="20dp"
    />
    <TextView android:id="@+id/jawabanz" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Tinggi:"
              android:textSize="20dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/lebar"
              android:layout_marginTop="140dp"
              android:layout_marginLeft="20dp"
    />
    <Button android:id="@+id/share"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/butt"
            app:layout_constraintBottom_toBottomOf="@id/butt"
            android:layout_marginLeft="90dp"
            android:text="Share"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>